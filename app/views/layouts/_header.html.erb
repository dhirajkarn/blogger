<header class="navbar navbar-fixed-top navbar-inverse">
<div class="navbar-inner">
<div class="container">
<%= link_to "Blogger", {:controller => "blogs", :action => "list"}, id: "logo" %>
<nav>
<ul class="nav pull-right">
<li><%= link_to "Home", {:controller => 'blogs'} %></li>
<li><%= link_to "Archives", {:controller => 'blogs', :action => 'list'} %></li>
<% if logged_in? %>
<li id="fat-menu" class="dropdown">
<a href="#" class="dropdown-toggle" data-toggle="dropdown">
<%= session[:username] %> <b class="caret"></b>
</a>
<ul class="dropdown-menu">
<li><%= link_to "Profile", {:controller => "users", :action => "show", :id => session[:user_id]} %></li>
<li><%= link_to "Settings", {:controller => "users", :action => "edit", :id => session[:user_id]} %></li>
<li class="divider"></li>
<li>
<%= link_to "Sign out", {:controller => "access", :action => "logout"} %>
</li>
</ul>
</li>
<% else %>
<li><%= link_to "Sign in", {:controller => "access", :action => "login"} %></li>
<% end %>
</ul>
</nav>
</div>
</div>
</header>
<% if !flash[:notice].blank? %>
	<h2><%= flash[:notice] %></h2>
<% end %>