<div class="row-fluid">
	<%= render('layouts/sidenav') %>
	<div class="span9">
		<div class="hero-unit">
			<h3><%= @blog.blog_title %></h3>
		</div>
		<p><%= @blog.blog_post %></p>
		<p class="pull-right"><small><%= @user.name %></small></p>
		<hr>
		<p class="pull-right"><small>Created : <%= @blog.created_at.strftime('%d %B, %Y') %></small></p>
		<!-- Comment form starts -->
		<h3><%= pluralize(@blog.comments.size, "Comment") %></h3>

		<% @comments.each do |comment| %>
		<%= render comment %>
		<% end %>

		<%= form_for(:comment, :url => { :controller => 'comments', :action => 'create', :blog_id => @blog.id, :class => 'form-horizontal' }) do |f| %>
			<div class="control-group">
				<label class="control-label">Name</label>
				<div class="controls"><%= f.text_field(:name) %></div>
			</div>
			<div class="control-group">
				<label class="control-label">Comment</label>
				<div class="controls">
					<%= f.text_area(:comment_text, :rows => '5') %>
				</div>
				<div class="contorls"><%= submit_tag('Post Comment', :class => "btn") %></div>
			</div>	
		<% end %>
		<!-- Ends -->
	</div>
</div>