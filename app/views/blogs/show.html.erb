<div class="row-fluid">
	<%= render('layouts/sidenav') %>
	<div class="span9">
		<div class="hero-unit">
			<h3><%= @blog.blog_title %></h3>
		</div>
		<p><%= @blog.blog_post %></p>
		<p class="pull-right"><%= @user.name %></p>
		<hr>
		<p class="pull-right">Created : <%= @blog.created_at.strftime('%d %B, %Y') %></p>
		<!-- Comment form starts -->
		<h3><%= pluralize(@blog.comments.size, "Comment") %></h3>

		<% @comments.each do |comment| %>
		<p><%= comment.name %> says at <%= comment.created_at.strftime('%d %B, %Y') %></p>
		<p><%= comment.comment_text %></p><hr>
		<% end %>

		<%= form_for(:comment, :url => { :controller => 'comments', :action => 'create', :blog_id => @blog.id }) do |f| %>
		<table>
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>
			<tr>
				<th>Comment</th>
				<td><%= f.text_area(:comment_text) %></td>
			</tr>
				
		</table>
		<div>
			<%= submit_tag('Post Comment', :class => "btn") %>
		</div>
		<% end %>
		<!-- Ends -->
	</div>
</div>