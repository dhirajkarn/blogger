<div class="row-fluid">
	<%= render('layouts/sidenav') %>
	<div class="span9">
		<%= error_messages_for(@blog) %>
		<h2>Edit Blog</h2>
		<%= form_for(:blog, :url => {:action => 'update', :id => @blog.id }) do |f| %>
			<div class="control-group">
				<label class="control-label">Title</label>
				<div class="controls"><%= f.text_field(:blog_title) %></div>
			</div>
			<div class="control-group">
				<label class="control-label">Post</label>
				<div class="controls">
					<%= f.text_area(:blog_post, :rows => '10',) %>
				</div>
				<div class="contorls"><%= submit_tag('Save Blog', :class => "btn") %></div>
			</div>
		<% end %>
	</div>
</div>
